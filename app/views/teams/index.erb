<div class="mt-3 text-center">
  <div class="d-flex justify-content-center">
    <h1>Your Teams</h1>
    <a class="my-auto mx-3" href="/teams/new"><button class="btn btn-sm btn-primary">Create a Team</button></a>
  </div>

  <% if !@user.teams_owned.empty? || !@user.teams_played_for.empty? %>
    <% if !@user.teams_owned.empty? %>
      <h2>Teams You Manage</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Team</th>
            <th>Next Game</th>
            <th>Current Record</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @user.teams_owned.each do |team|%>
            <tr>
              <td><%= team.name %></td>
              <td><%= team.next_game %></td>
              <td><%= team.record %></td>
              <td>
                <a href=<%= "/teams/#{team.id}" %>><button class="btn btn-sm btn-primary">Team Page</button></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <% if !@user.teams_played_for.empty? %>
      <h2>Teams You Play For</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Team</th>
            <th>Next Game</th>
            <th>Current Record</th>
            <th>Actions</th>
          </tr>
        </thead>
          <tbody>
          <% @user.teams_played_for.each do |team|%>
            <tr>
              <td><%= team.name %></td>
              <td><%= team.next_game %></td>
              <td><%= team.record %></td>
              <td>
                <a href=<%= "/teams/#{team.id}" %>><button class="btn btn-sm btn-primary">Team Page</button></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% else %>

    <h2>No Teams Found</h2>

  <% end %>
</div>
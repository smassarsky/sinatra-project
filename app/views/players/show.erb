<div class="mt-3 text-center">
  <h2><%= @player.team.name %></h2>
  <% if @player.user %>
    <h3><a href=<%= "/users/#{@player.user.id}" %>><%= @player.name %></a></h3>
  <% else %>
  <h3><%= @player.name %></h3>
  <% end %>
</div>

<div id="current-season-stats" class="mt-3 text-center">
  <h3>Current Season Stats</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Season</th>
        <th>Games Played</th>
        <th>Points</th>
        <th>Goals</th>
        <th>Assists</th>
        <th>+/-</th>
        <th>PIM</th>
      </tr>
    </thead>
    </tbody>
      <tr>
        <th scope="row"><%= @player.current_season.name %></th>
        <td><%= @player.games_played_in(@player.current_season) %></td>
        <td><%= @player.points(@player.current_season) %></td>
        <td><%= @player.count_goals(@player.current_season) %></td>
        <td><%= @player.count_assists(@player.current_season) %></td>
        <td><%= @player.plus_minus(@player.current_season) %></td>
        <td><%= @player.pim(@player.current_season) %></td>
      </tr>
    </tbody>
  </table>
</div>

<div id="all-time-stats" class="mt-3 text-center">
  <h3>All Time Stats</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Season</th>
        <th>Games Played</th>
        <th>Points</th>
        <th>Goals</th>
        <th>Assists</th>
        <th>+/-</th>
        <th>PIM</th>
      </tr>
    </thead>
    <tbody>
      <% @player.seasons.each do |season| %>
        <tr>
          <th scope="row"><%= season.name %></th>
          <td><%= @player.games_played_in(season) %></td>
          <td><%= @player.points(season) %></td>
          <td><%= @player.count_goals(season) %></td>
          <td><%= @player.count_assists(season) %></td>
          <td><%= @player.plus_minus(season) %></td>
          <td><%= @player.pim(season) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>